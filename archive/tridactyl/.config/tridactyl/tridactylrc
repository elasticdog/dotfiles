" start fresh with default Tridactyl settings each time this file is sourced
sanitize tridactyllocal tridactylsync

colorscheme dark

" launch Kakoune for editing text areas (via <Ctrl-i>)
set editorcmd /Applications/kitty.app/Contents/MacOS/kitty -o remember_window_size=no -o initial_window_width=132c -o initial_window_height=43c kak +%l:%c

set searchurls.issue https://github.com/elastic/infra/issues/%s

" use all Gmail keyboard bindings
autocmd DocStart mail.google.com/* mode ignore

" use some Reddit Enhancement Suite keyboard bindings for basic navigation
unbindurl reddit.com/* c
unbindurl reddit.com/* j
unbindurl reddit.com/* k
unbindurl reddit.com/* l
unbindurl reddit.com/* x
